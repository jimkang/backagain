{
  "manifest_version": 2,

  "name": "Back Again?",
  "description": "Notes how many times you've visited the web page you're on this day.",
  "version": "1.0.0",

  "permissions": [
    "tabs",
    "http://*/*",
    "https://*/*",
    "history"
  ],

  "background": {
    "scripts": [
      "makeicon.js", 
      "colordesignator.js", 
      "reporter.js", 
      "background.js"
    ],
    "persistent": false
  },

  "browser_action": {
    "default_icon": {
      "19": "onebyone_icon_19.png",
      "38": "onebyone_icon_38.png"
    }
  },

  "icons": {
    "16": "onebyone_icon_16.png",
    "48": "onebyone_icon_48.png",
    "128": "onebyone_icon_128.png"
  }
}

